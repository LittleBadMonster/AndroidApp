<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/system_setting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/login_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@mipmap/back"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@mipmap/back"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"/>
        </LinearLayout>
        <View
            android:id="@+id/view_line1"
            android:layout_below="@id/set_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#E7E5E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="11dp"
            android:id="@+id/sys_modify"
            android:clickable="true"
            android:focusable="true"
            android:layout_below="@id/view_line1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/text_user_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/modify_userinfo"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/image_user_setting"
                android:layout_width="18sp" android:contentDescription="TODO"
                android:layout_height="22sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/next"
                />

        </LinearLayout>
        <View
            android:id="@+id/view_line2"
            android:layout_below="@id/sys_modify"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#E7E5E5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:id="@+id/sys_modifyPwd"
            android:layout_below="@id/sys_modify"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/text_user_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/modify_pwd"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/image_user_pwd"
                android:layout_width="18sp" android:contentDescription="TODO"
                android:layout_height="22sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/next"
                />

        </LinearLayout>
        <View
            android:id="@+id/view_line3"
            android:layout_below="@id/sys_modifyPwd"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#E7E5E5"/>

        <Button
            android:id="@+id/login_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="@string/exit_login"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:background="#fff"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="此页面为空，请先登录哦"
        android:textSize="20dp"/>
</RelativeLayout>