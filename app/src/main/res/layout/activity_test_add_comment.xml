<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/align_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="284dp"
                android:text="用 RelativeLayout先将你要固定的两个控件放置顶部和底部，中间用ScrollView，
                ScrollView里写一个布局，LinearLayout，你想滚动应该是要放ListView之类的控件吧，嗯 就是这样" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:text="用 RelativeLayout先将你要固定的两个控件放置顶部和底部，中间用ScrollView，
                ScrollView里写一个布局，LinearLayout，你想滚动应该是要放ListView之类的控件吧，嗯 就是这样" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:text="用 RelativeLayout先将你要固定的两个控件放置顶部和底部，中间用ScrollView，
                ScrollView里写一个布局，LinearLayout，你想滚动应该是要放ListView之类的控件吧，嗯 就是这样" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="256dp"
                android:text="用 RelativeLayout先将你要固定的两个控件放置顶部和底部，中间用ScrollView，
                ScrollView里写一个布局，LinearLayout，你想滚动应该是要放ListView之类的控件吧，嗯 就是这样" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/show_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/align_layout"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/comment_input"
            android:layout_width="250sp"
            android:layout_height="40sp"
            android:background="@drawable/layerlist"
            android:hint="请输入你的评论..."
            android:layout_weight="2"
            android:inputType="" android:textSize="15sp" />
        <Button
            android:id="@+id/send_comment"
            android:text="发表"
            android:layout_weight="1"
            android:layout_marginTop="-1sp"
            android:layout_height="40sp"
            android:layout_width="wrap_content"
             />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/show_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/align_layout"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/edittext_border"
            android:hint="发表我的看法..."
            android:layout_weight="2"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/check_Is_Checked"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_width="30sp" android:contentDescription="TODO" 
            android:layout_height="30sp" />
    </LinearLayout>

</RelativeLayout>