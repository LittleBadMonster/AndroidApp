<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/login_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line1"
        android:layout_below="@id/set_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#E7E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/modify_pic"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view_line1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_modify_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_pic_text"
            android:layout_gravity="center_vertical"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            />

        <ImageView
            android:id="@+id/image_modify_pic"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_line2"
        android:layout_below="@id/modify_pic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#E7E5E5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/modify_nickname"
        android:layout_below="@id/view_line2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_user_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_nickname_text"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/set_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/image_user_nickname"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_line3"
        android:layout_below="@id/modify_nickname"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#E7E5E5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/introduce"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view_line3"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_introduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_introduce_text"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/set_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/image_introduce"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>

    <View
        android:id="@+id/view_line4"
        android:layout_below="@id/introduce"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#E7E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/modify_sex"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view_line4"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_modify_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_sex_text"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/set_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/image_modify_sex"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_line5"
        android:layout_below="@id/modify_sex"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#E7E5E5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/modify_birth"
        android:layout_below="@id/view_line5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_user_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_birth_text"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/set_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/image_user_birth"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_line6"
        android:layout_below="@id/modify_birth"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#E7E5E5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:id="@+id/modify_area"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view_line6"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/text_modify_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/modifying_area_text"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/set_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/image_modify_area"
            android:layout_width="18sp" android:contentDescription="TODO"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_line7"
        android:layout_below="@id/modify_area"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#E7E5E5"/>
</RelativeLayout>